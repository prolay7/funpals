    "express": "^4.19.2",
    "express-validator": "^7.2.0",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.12.0",
    "sharp": "^0.33.5",
    "winston": "^3.13.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
